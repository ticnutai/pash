<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- כותרת -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_title"
        android:textColor="#D4AF37"
        android:textSize="13sp"
        android:textStyle="bold"
        android:gravity="center"
        android:letterSpacing="0.05"
        android:layout_marginBottom="10dp" />

    <!-- טקסט הפסוק -->
    <TextView
        android:id="@+id/widget_verse_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:gravity="center|end"
        android:textDirection="rtl"
        android:lineSpacingMultiplier="1.4"
        android:paddingHorizontal="4dp" />

    <!-- מקור הפסוק -->
    <TextView
        android:id="@+id/widget_verse_ref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#D4AF37"
        android:textSize="12sp"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_marginTop="8dp" />

    <!-- כפתור פתיחת האפליקציה -->
    <TextView
        android:id="@+id/widget_open_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/widget_open"
        android:textColor="#1a1a2e"
        android:textSize="11sp"
        android:textStyle="bold"
        android:background="@drawable/widget_button_bg"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:layout_marginTop="10dp" />

</LinearLayout>
